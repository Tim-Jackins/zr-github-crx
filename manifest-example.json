{
  "manifest_version": 2,
  "name": "ZR Github",
  "description": "Adds Github capabilities to the ZR website",
  "version": "0.1.0",
  "background": {
    "scripts": [
      "event.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://www.zerorobotics.mit.edu/ide/*"],
      "js": ["content.js"]
    }
  ],
  "page_action": {
    "default_title": "Github interface",
    "default_popup": "popup.html"
  },
   "permissions": [
    "activeTab",
    "identity",
    "storage",
    "declarativeContent",
    "http://www.zerorobotics.mit.edu/",
    "https://github.com/"
  ],
  "web_accessible_resources": [
    "ace-diff/*"
  ],
}
